- @header = haml :default_header
.content
  %h2 Repositories
  %ul
    - $repos.each do |reponame,attr|
      %li 
        %a{:href=>"/repos/#{reponame}/"}
          = reponame
  %h2 ATS Source Code
  %ul
    - $ats.each do |version|
      %li
