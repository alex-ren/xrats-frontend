- @title = "Try ATS In The Browser"
- @header = haml :code_header
#ats-info{"data-compiler"=>compiler}
#code-mirror-wrapper
  %textarea.code-mirror#atscc_input
    = canned
%h3
  #{title} Compiler Output
  #atscc-buttons
    - actions.each do |action|
      %button.atscc-button{"data-action"=>action}
        = action.capitalize
    - if actions.include? "compile"
      Compile Flags:
      %input#compile-flags.arguments{:type=>"text"}
    - if actions.include? "run"
      Runtime Arguments:
      %input#runtime-flags.arguments{:type=>"text"}
    %input#attached_file{:type=>"file",:style=>"display:none;"}
    %button.attach_file
      Upload
  .cl
#ats-console